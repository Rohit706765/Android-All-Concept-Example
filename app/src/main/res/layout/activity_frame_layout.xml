<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameLayout.FrameLayout">
    <FrameLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frame"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureAllChildren="true"/>



    <LinearLayout
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_first"
            android:text="firstColumn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
         <TextView

             android:textColor="@color/white"
            android:id="@+id/txt_second"
            android:text="secondColumn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
         <TextView
             android:textColor="@color/white"
            android:id="@+id/txt_third"
            android:text="thirdColumn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
         <TextView
             android:textColor="@color/white"
            android:id="@+id/txt_four"
            android:text="fourColumn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>