<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressBar__ProgressDialog.progressBar_Concept">

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/circular_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circular_spinner"
        android:id="@+id/btn_show_Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        />
    <ProgressBar
        android:background="@color/black"
        android:visibility="invisible"
        android:progressDrawable="@drawable/progress_bar_horizontal"
        android:progress="0"
        android:layout_margin="10dp"
        android:max="100"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/horizontal_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_show_Progress"
        />


</androidx.constraintlayout.widget.ConstraintLayout>